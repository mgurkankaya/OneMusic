@model Singer
@{
    ViewData["Title"] = "CreateSinger";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Yeni Şarkıcı Oluştur</h1>

<form method="post">
    <label>Resim URL</label>
    <input type="text" asp-for="ImageUrl" class="form-control" />
    <span class="text-danger" asp-validation-for="ImageUrl"></span>

    <br />
    <label>Şarkıcı İsmi</label>
    <input type="text" asp-for="Name" class="form-control" />
    <span class="text-danger" asp-validation-for="Name"></span>
    <br />
    <button class="btn btn-outline-primary"> Kaydet</button>

</form>

