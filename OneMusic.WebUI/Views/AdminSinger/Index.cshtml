@model List<Singer>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<h5 class="card-title fw-semibold mb-4">Sanatçılar</h5>
<table class="table table-secondary table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th class="text-center col-1">#</th>
            <th class="col-2">Resim</th>
            <th class="text-center col-7">Şarkıcı Adı</th>
            <th class="text-center col-2">İşlemler</th>
        </tr>
    </thead>
    <tbdoy>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <th class="text-center bg-gradient-gray">@count</th>
                <td><img style="height:75px; width:75px;" src="@item.ImageUrl" alt="Alternate Text" />  </td>
                <td> @item.Name</td>
                <td class="text-center ">
                    <button class="btn btn-outline-danger" onclick="deleteSinger(@item.SingerId)"><i class="ti ti-trash"></i></button>
                    <a asp-action="UpdateSinger" asp-route-id="@item.SingerId" class="btn btn-outline-danger"><i class="ti ti-edit"></i></a>

                </td>
            </tr>
        }
    </tbdoy>
</table>
<a asp-action="CreateSinger" class="btn btn-outline-danger"><i class="ti ti-plus mr-2"></i>Yeni</a>

<script>
    function deleteSinger(id) {
        Swal.fire({
            title: "Silmek istediğinize emin misiniz?",
            text: "Bu işlem geri alınmayacak!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Evet, Sil!",
            cancelButtonText:"İptal"
        }).then((result) => {
            if (result.isConfirmed) {
               window.location.href= "/AdminSinger/DeleteSinger/"+id
            }
        });
    }
</script>
