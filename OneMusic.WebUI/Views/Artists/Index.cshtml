@model List<AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}
<h3>Sanatçılar</h3>
<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Görsel</th>
        <th>Sanatçı Adı</th>
        <th>Albümler</th>
        <th>İşlemler</th>
    </tr>  
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <th>@item.ImageUrl</th>
            <td>@item.Name @item.Surname</td>
            <td>
                <a target="_blank" href="/Albums/Index/@item.Id" class="btn btn-outline-info">Albümleri Gör</a>

            </td>




            <td>   <a href="/Artists/DeleteArtist/@item.Id" class="btn btn-outline-danger">Sil</a>   </td>
        </tr>

    }
</table>
