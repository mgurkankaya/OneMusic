@model RegisterViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>RegistrationForm_v5 by Colorlib</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- MATERIAL DESIGN ICONIC FONT -->
    <link rel="stylesheet" href="~/regform/fonts/material-design-iconic-font/css/material-design-iconic-font.min.css">

    <!-- STYLE CSS -->
    <link rel="stylesheet" href="~/regform/css/style.css">
</head>
<body>
    <div class="wrapper ">
        <div class="inner">
            <form asp-action="SignUp" method="post">
                <h3>One Music Kayıt Formu</h3>
                <div class="form-wrapper">
                    <label for="" class="label-input">Ad</label>
                    <input type="text" asp-for="Name" class="form-control" required>
                </div>
                <div class="form-wrapper">
                    <label for="" class="label-input">Soyad</label>
                    <input type="text" asp-for="Surname" class="form-control" required>
                </div>
                <div class="form-wrapper">
                    <label for="" class="label-input">Mail</label>
                    <input type="email" asp-for="Email" class="form-control" required>
                </div>
                <div class="form-wrapper">
                    <label for="" class="label-input">Kullanıcı Adı</label>
                    <input type="text" asp-for="UserName" class="form-control" required>
                </div>
                <div class="form-wrapper">
                    <label for="" class="label-input">Şifre</label>
                    <input type="password" asp-for="Password" class="form-control" required>
                </div>
                <div class="form-wrapper">
                    <label for="" class="label-input">Şifre Doğrula</label>
                    <input type="password" asp-for="ConfirmPassword" class="form-control" required>
                </div>
                <div style="color:red;">
                    @Html.ValidationSummary()
                </div>
                <button>Kaydol</button>
            </form>
            <div class="image-holder">
                <img src="https://www.wtcmanila.com.ph/wp-content/uploads/2023/07/rock-on-rear-view-of-a-music-fan-dancing-with-her-2023-01-04-20-11-49-utc.jpg" alt="">
            </div>
        </div>
    </div>
    <script src="~/regform/js/jquery-3.3.1.min.js"></script>
    <script src="~/regform/js/main.js"></script>
</body><!-- This templates was made by Colorlib (https://colorlib.com) -->
</html>