@model List<Contact>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<h5 class="card-title fw-semibold mb-4">İletişim</h5>
<table class="table table-secondary table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th class="text-center col-1">#</th>
            <th class="col-2">Adres</th>
            <th class="col-2">Mail</th>
            <th class="text-center col-2">Telefon</th>
            <th class="text-center col-3">Harita</th>
            <th class="text-center col-2">İşlemler</th>
        </tr>
    </thead>
    <tbdoy>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <th class="text-center bg-gradient-gray">@count</th>
               
                <td>@item.Adresss  </td><td>@item.Email  </td>
                <td> @item.Phone</td>
                <td> @item.MapUrl.Substring(0,30) ...</td>
               
                <td class="text-center ">
                    <button class="btn btn-outline-danger" onclick="deleteContact(@item.ContactId)"><i class="ti ti-trash"></i></button>
                    <a asp-action="UpdateContact" asp-route-id="@item.ContactId" class="btn btn-outline-danger"><i class="ti ti-edit"></i></a>
                </td>
            </tr>
        }
    </tbdoy>
</table>
<a asp-action="CreateContact" class="btn btn-outline-danger"><i class="ti ti-plus mr-2"></i>Yeni</a>

<script>
    function deleteContact(id) {
        Swal.fire({
            title: "Silmek istediğinize emin misiniz?",
            text: "Bu işlem geri alınmayacak!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Evet, Sil!",
            cancelButtonText: "İptal"
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = "/AdminContact/DeleteContact/" + id
            }
        });
    }
</script>
